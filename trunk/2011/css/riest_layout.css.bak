
/*------------------------- banner -------------------------*/
#riest-banner {
	margin: auto;
	height: 198px;
	text-align: left;
	background-image: url(../images/banner.gif);
}
/*------------------------- navigator -------------------------*/
#riest-navigator {
	height: 45px;
	background: url(../images/navigator_bg.gif) repeat-x;
}

#riest-navigator li {
	float: left;
	line-height: 36px;
	text-align: center;
	background-image: url(../images/navigator_division.gif);
	background-repeat: no-repeat;
	background-position: right center;
}

#riest-navigator li.riest-navigator-last {
	background: none;
}

#riest-navigator li a{
	width: 96px;
	color: white;
	text-align: center;
	font-size: 16px;
	font-weight: bold;
	background: none;
}

 #riest-navigator li a:visited {
	color: white;
}

#riest-navigator li a:active {
}

#riest-navigator li a:hover {
	color: #e8852a;
}

/*------------------------- content -------------------------*/

#riest-content {
	padding: 2px 10px;
	background-color: white;
}

.riest-content-padding {
	margin-top: 10px;
}

.riest-content-row {
	width: 940px;
	height: 256px;
}

/* riest-left-column */
#riest-left-column {
	float: left;
	width: 275px;
	height: 256px;
}

.riest-left-column-center {
	width: 251px;
}

.riest-left-column-content {
	width: 273px;
	height: 214px;
}

/* riest-center-column */
#riest-center-column {
	margin-left: 10px;
	float: left;
	width: 405px;
	height: 256px;
}

.riest-center-column-center {
	width: 381px;
}

.riest-center-column-content {
	width: 403px;
	height: 214px;
}

/* riest-right-column */
#riest-right-column {
	margin-left: 10px;
	float: left;
	width: 240px;
	height: 256px;
}

.riest-right-column-center {
	width: 216px;
}

.riest-right-column-content {
	width:238px;
	height: 214px;
}

#riest-links {
	float: left;
	width: 240px;
	height: 256px;
	margin-left: 10px;
	text-align: center;
}

#riest-links img {
	border: none;
}

.riest-links-one {
	height: 50px;
	line-height: 50px;
}

.riest-links-two {
	height: 34px;
	line-height: 34px;
}

.riest-links-two input {
	width: 190px;
	height: 22px;
	font-size: 18px;
}

.riest-links-two a {
	width: 24px;
	height: 24px;
	background: url(../images/search.gif) no-repeat;
	background-position: right bottom;
}

.riest-links-two select {
	width: 220px;
	font-size: 18px;
}

.news-list {
	padding: 5px 10px;
}

.news-list li {
	font-size: 16px;
	font-weight: bold;
	height: 26px;
	line-height: 26px;
}

.news-list li a:hover {
	color: blue;
}

 .news-list-style li a {
	padding-left: 15px;
	color: #707070;
	background-image: url(../images/list_icon.gif);
	background-repeat: no-repeat;
	background-position: 5px center;
}

.notify-style li a {
	padding-left: 25px;
	background-repeat: no-repeat;
	background-position: 5px center;
}

.notify-first {
	color: #ef7041;
	background-image: url(../images/num_01_hot.gif);
}

.notify-second {
	color: #f39b2a;
	background-image: url(../images/num_02_hot.gif);
}

.notify-third {
	color: #f8c42b;
	background-image: url(../images/num_03_hot.gif);
}

.notify-fourth {
	color: #707070;
	background-image: url(../images/num_04.gif);
}

.notify-fifth {
	color: #707070;
	background-image: url(../images/num_05.gif);
}

.notify-sixth {
	color: #707070;
	background-image: url(../images/num_06.gif);
}

.notify-seventh {
	color: #707070;
	background-image: url(../images/num_07.gif);
}

.notify-eighth {
	color: #707070;
	background-image: url(../images/num_08.gif);
}

/* images box */
#images-box {
	width: 940px;
	height: 228px;
}

.images-box-center {
	width: 916px;
}

.images-box-content {
	height: 210px;
	width: 928px;
	padding: 5px;
}

#makeMeScrollable
{
	width:100%;
	height: 210px;
	position: relative;
}

#makeMeScrollable div.scrollableArea *
{
	position: relative;
	float: left;
	margin: 0;
	padding: 0;
}

.scrollableArea img {
	width: 300px;
	height: 210px;
	border: none;
}

