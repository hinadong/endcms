/*------------------------- footer -------------------------*/

#riest-footer div {
	font-size: 0;
}

#riest-page-bottom-left {
	float: left;
	width: 7px;
	height: 7px;
	background: url(../images/page_bottom_left.gif) no-repeat;
}

#riest-page-bottom-center {
	float: left;
	width: 946px;
	height: 7px;
	background-color: white;
}

#riest-page-bottom-right {
	float: right;
	width: 7px;
	height: 7px;
	background: url(../images/page_bottom_right.gif) no-repeat;
}

#riest-footer {
	color: white;
	text-align: center;
	font-size: 14px;
}

#riest-footer ul {
	padding: 10px 0;
}

#riest-footer ul li {
	line-height: 24px;
}

#riest-footer ul li span {
	margin: 0 10px;
}
